{
  "Version": "2008-10-17",
  "Id": "PolicyCloudFrontForPrivateContent",
  "Statement": [
    {
      "Sid": "1",
      "Effect": "Allow",
      "Principal": {
        "AWS": "${origin_access_identity_iam_arn}"
      },
      "Action": "s3:GetObject",
      "Resource": "${s3_bucket_arn}/*"
    },
    {
      "Sid": "HTTP Deny",
      "Effect": "Deny",
      "Principal": {
        "AWS": "*"
      },
      "Action": "s3:*",
      "Resource": [
        "${s3_bucket_arn}/*",
        "${s3_bucket_arn}"
      ],
      "Condition": {
        "Bool": {
          "aws:SecureTransport": "false"
        }
      }
    }
  ]
}